<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JourneySound" parent="@style/AppTheme">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_light</item>
        <item name="android:navigationBarColor">@color/accent</item>

    </style>

    <style name="CustomToolbar" parent="JourneySound">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>

    <style name="GridViewImageButtonStyle">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>