<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="JourneySound" parent="@style/AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="CustomCollapsingToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>

    <style name="CustomToolbar" parent="JourneySound">
        <item name="android:textColorSecondary">@color/primary_light</item>
    </style>

    <style name="GridViewImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="socialMediaItem">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
